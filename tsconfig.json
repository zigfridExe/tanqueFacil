{
  "extends": ["expo/tsconfig.base", "./tsconfig.paths.json"],
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "jsx": "react-native",
    "lib": ["es6", "dom", "es2017", "es2018", "es2019", "es2020", "es2021", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.spec.ts",
    "**/*.test.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js"
  ]
}
